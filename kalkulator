/**
 * Kelas kalkulator untuk melakukan operasi aritmatika dasar.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
public class Kalkulator
{
    // Variabel instance untuk menyimpan dua angka dan hasil
    private float number1;
    private float number2;
    private float result;

    // Metode untuk memasukkan nilai number1
    public void insertNumber1(float amount)
    {
        number1 = amount;
    }
    
    // Metode untuk memasukkan nilai number2
    public void insertNumber2(float amount)
    {
        number2 = amount;
    }

    // Metode untuk melakukan penjumlahan
    public float penjumlahan()
    {
        result = number1 + number2;
        return result;
    }

    // Metode untuk melakukan pengurangan
    public float pengurangan()
    {
        result = number1 - number2;
        return result;
    }

    // Metode untuk melakukan perkalian
    public float perkalian()
    {
        result = number1 * number2;
        return result;
    }

    // Metode untuk melakukan pembagian, dengan pengecekan pembagian nol
    public float pembagian()
    {
        if (number2 != 0) {
            result = number1 / number2;
        } else {
            System.out.println("Error: Tidak bisa membagi dengan nol.");
            result = 0; // Atur nilai default jika pembagian dengan nol
        }
        return result;
    }
}
